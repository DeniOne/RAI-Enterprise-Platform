{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "db:generate": {
            "cache": false
        },
        "db:migrate": {
            "cache": false
        },
        "db:seed": {
            "cache": false
        },
        "build": {
            "dependsOn": [
                "^build",
                "db:generate"
            ],
            "outputs": [
                ".next/**",
                "dist/**"
            ]
        },
        "lint": {},
        "test": {
            "outputs": [
                "coverage/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        }
    }
}