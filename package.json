{
    "name": "rai-enterprise-platform",
    "private": true,
    "packageManager": "pnpm@9.0.0",
    "type": "module",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo dev",
        "build": "turbo build",
        "lint": "turbo lint",
        "gate:invariants": "node scripts/invariant-gate.cjs",
        "gate:invariants:warn": "node scripts/invariant-gate.cjs --mode=warn",
        "gate:invariants:enforce": "node scripts/invariant-gate.cjs --mode=enforce",
        "gate:rollout": "node scripts/invariant-rollout-guard.cjs",
        "gate:rollout:input": "node scripts/rollout-guard-input-from-env.cjs",
        "lint:tenant-context": "node scripts/lint-tenant-context.cjs",
        "lint:tenant-context:enforce": "node scripts/lint-tenant-context.cjs --enforce",
        "lint:fsm-status-updates": "node scripts/lint-fsm-status-updates.cjs",
        "lint:fsm-status-updates:enforce": "node scripts/lint-fsm-status-updates.cjs --enforce",
        "verify:fsm-db:task": "node scripts/verify-task-fsm-db.cjs",
        "report:invariants:weekly": "node scripts/invariant-weekly-review.cjs",
        "lint:docs:matrix": "node scripts/doc-lint-matrix.cjs --fail-on-mismatch",
        "lint:docs:matrix:strict": "node scripts/doc-lint-matrix.cjs --fail-on-mismatch --strict-version",
        "backfill:outbox-companyid": "node scripts/backfill-outbox-companyid.cjs",
        "rollback:tenant-middleware": "node scripts/tenant-middleware-rollback.cjs --mode=shadow",
        "test": "turbo test",
        "generate:graph": "node scripts/generate-graph.js",
        "db:generate": "turbo db:generate",
        "db:migrate": "turbo db:migrate",
        "db:migrate:prod": "turbo db:migrate",
        "db:seed": "turbo db:seed",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down"
    },
    "devDependencies": {
        "turbo": "^2.4.2",
        "typescript": "^5.7.3",
        "@types/node": "^22.10.7"
    }
}
