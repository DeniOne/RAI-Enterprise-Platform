{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "types": [
            "jest",
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@rai/prisma-client": [
                "../prisma-client/src"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}