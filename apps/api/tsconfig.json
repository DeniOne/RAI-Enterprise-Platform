{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": false,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@rai/prisma-client": [
                "../../packages/prisma-client/src"
            ],
            "@rai/prisma-client/*": [
                "../../packages/prisma-client/src/*"
            ],
            "@nestjs/*": [
                "./node_modules/@nestjs/*"
            ],
            "rxjs": [
                "./node_modules/rxjs"
            ],
            "rxjs/*": [
                "./node_modules/rxjs/*"
            ],
            "@rai/legal-engine": [
                "../../packages/legal-engine/src"
            ],
            "@rai/legal-engine/*": [
                "../../packages/legal-engine/src/*"
            ],
            "@rai/rd-engine": [
                "../../packages/rd-engine/src"
            ],
            "@rai/rd-engine/*": [
                "../../packages/rd-engine/src/*"
            ],
            "@rai/agro-orchestrator": [
                "../../packages/agro-orchestrator/src"
            ],
            "@rai/agro-orchestrator/*": [
                "../../packages/agro-orchestrator/src/*"
            ],
            "@rai/vector-store": [
                "../../packages/vector-store/src"
            ],
            "@rai/vector-store/*": [
                "../../packages/vector-store/src/*"
            ]
        },
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "strictBindCallApply": false,
        "forceConsistentCasingInFileNames": false,
        "noFallthroughCasesInSwitch": false,
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "src/**/*",
        "verify-beta.ts",
        "../../docs/02_DOMAINS/AGRO_DOMAIN/EVENTS/**/*.ts",
        "../../docs/02_DOMAINS/AGRO_DOMAIN/CONTROL/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts"
    ]
}