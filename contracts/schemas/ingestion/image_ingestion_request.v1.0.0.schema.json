{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "contracts/schemas/ingestion/image_ingestion_request.v1.0.0.schema.json",
  "title": "Image Ingestion Request",
  "description": "Канонический контракт запроса ingestion (Sprint 1).",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "trace_id", "image"],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0.0"
    },
    "trace_id": {
      "type": "string",
      "description": "Trace ID (UUID)."
    },
    "event_id": {
      "type": "string"
    },
    "occurred_at": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": { "type": "string" },
        "device_id": { "type": "string" }
      }
    },
    "image": {
      "type": "object",
      "additionalProperties": false,
      "required": ["uri"],
      "properties": {
        "uri": { "type": "string", "format": "uri" },
        "content_type": { "type": "string" },
        "size_bytes": { "type": "integer", "minimum": 0 },
        "width_px": { "type": "integer", "minimum": 1 },
        "height_px": { "type": "integer", "minimum": 1 }
      }
    }
  }
}
